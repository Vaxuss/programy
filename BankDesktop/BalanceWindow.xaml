<Window x:Class="BankDesktop.BalanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankDesktop"
        mc:Ignorable="d"
        Title="BalanceWindow" Height="200" Width="250">
    <StackPanel>
        <ComboBox x:Name="Rodzaj" Margin="10">
            <ComboBox.Items>
                <ComboBoxItem IsSelected="True">Wpłać</ComboBoxItem>
                <ComboBoxItem>Wypłać</ComboBoxItem>
            </ComboBox.Items>
        </ComboBox>
        <Label Content="Podaj kwotę: "/>
        <TextBox x:Name="KwotaTextBox"/>
        <Button Content="Zatwierdż" Click="Button_Click"/>
    </StackPanel>
</Window>
