<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoMobline.pages.AddEditItem"
             x:Name="AddEditPage">

    <ContentPage.Resources>
        <StyleSheet>
            <![CDATA[
            ^contentpage {
                background-color: lightgray;
            }
            
            ^stacklayout{
                background-color: white;
            }
            ]]>
        </StyleSheet>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="hiddenId" IsVisible="false" Text=""/>
            <Entry x:Name="subjectEntry" Keyboard="Text" ReturnType="Next" Placeholder="Tu wpisz temat"/>
            <Editor x:Name="infoEditor" Keyboard="Text" AutoSize="TextChanges" Placeholder="Tu wpisz opis"/>
            <Button x:Name="button" Text="Zatwierdź" Clicked="button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>