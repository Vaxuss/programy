<Application x:Class="TrigeryStyleKrt.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TrigeryStyleKrt"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Label}" x:Key="label1">
            <Setter Property="Foreground" Value="Red"/>
        </Style>

        <Style TargetType="{x:Type Label}" x:Key="label2">
            <Setter Property="Foreground" Value="Green"/>
        </Style>

        <Style TargetType="{x:Type Label}" x:Key="label3">
            <Setter Property="Foreground" Value="Blue"/>
        </Style>
    </Application.Resources>
</Application>
