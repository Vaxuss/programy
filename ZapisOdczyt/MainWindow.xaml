<Window x:Class="ZapisOdczyt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZapisOdczyt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/> 
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGrid"
                  IsReadOnly="False"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Imie" Width="*" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Wiadomość" Width="*" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Email" Width="*" Binding="{Binding Email}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1">
            <!--<TextBox x:Name="txtBox"/>-->
            <Button Content="Zapisz" Click="Button_Click"/>
            <Button Content="Otwórz" Click="Button_Click_1"/>
            <!--<TextBlock x:Name="readBlock"/>-->
        </StackPanel>
    </Grid>
</Window>
