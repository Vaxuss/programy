    <StackPanel>
        <TextBox x:Name = "TekstDoSkopiowania"/>
        <TextBlock x:Name="textBlock" Text="{Binding ElementName=TekstDoSkopiowania, Path=Text}" 
                   FontSize="{Binding ElementName =WielkoscCzcionki, Path=Value}"/>
        <Label x:Name="etykieta"/>
        <Slider x:Name="WielkoscCzcionki" 
                Minimum="20" 
                Maximum="50" 
                IsSnapToTickEnabled="True" 
                TickFrequency="5"
                ValueChanged="WielkoscCzcionki_ValueChanged"/>
        <Button x:Name="button" Content="Kliknij mnie"
                Click="button_Click"/>
    </StackPanel>

